<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_good_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fdffff"
    android:fitsSystemWindows="true"
    tools:context="com.example.filemanager.repositorymanager.Activity.GoodOutActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp">
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolBar"
          android:background="@color/colorBg"
          android:title="出货"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="出货"
          android:textColor="@color/colorWhite"/>
      </android.support.v7.widget.Toolbar>
  </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
      <TextView
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginLeft="20dp"
          android:textColor="@color/colorBg"
          android:text="商品名称或编号"/>
      <EditText
          android:id="@+id/good_out_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:textSize="28sp" />
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
       <Button
           android:id="@+id/good_out_verify"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:textColor="#f2f2f2"
           android:background="@drawable/button"
           android:text="查询信息"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorBg"
                android:text="货物编号"/>
            <TextView
                android:id="@+id/good_out_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="28sp"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorBg"
            android:text="货物名称"/>
        <TextView
            android:id="@+id/good_out_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="28sp"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorBg"
            android:text="货物规格"/>
        <TextView
            android:id="@+id/good_out_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="28sp"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorBg"
            android:text="货物单价"/>
        <TextView
            android:id="@+id/good_out_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="28sp"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorBg"
            android:text="货物余量"/>
        <TextView
            android:id="@+id/good_out_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="28sp"
            />
            </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBg"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:layout_gravity="center"
              android:textColor="@color/colorBg"
              android:text="出货数量"/>
          <EditText
              android:id="@+id/good_out_to"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:textSize="28sp" />
          </LinearLayout>

  </LinearLayout>
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/good_out_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="15sp"
        android:textColor="#f2f2f2"
        android:background="@drawable/button"
        android:text="出货"
        />
</LinearLayout>
