<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.filemanager.repositorymanager.Activity.GoodsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:background="@color/colorBg"
            android:title="出货"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="出货"
                android:textColor="@color/colorWhite"/>
        </android.support.v7.widget.Toolbar>
        <TextView
            android:id="@+id/note_activity_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorBg"
            android:text="商品名:卫龙辣条"
            android:textSize="35sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bab8b8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/note_activity_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:text="记录编号:910089298131"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/note_activity_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"

                android:text="记录时间:50包/箱"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/note_activity_good_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"

                android:text="商品id:50元/箱"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/note_activity_quan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="数量:47箱"
                android:textColor="#000000"
                android:textSize="26sp"/>
            <TextView
                android:id="@+id/note_activity_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="类型:47箱"
                android:textColor="#000000"
                android:textSize="26sp"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
